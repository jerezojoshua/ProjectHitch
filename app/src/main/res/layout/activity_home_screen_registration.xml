    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="45dp"
        android:paddingTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Your Personal Information"
                android:textStyle="bold"
                android:textSize="18dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maritalstatustext"
            android:text="Marital Status:  "
            android:layout_marginTop="10dp"/>

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/maritalstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/maritalstat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address1text"
            android:text="Address 1:  "/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address1"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address2text"
                android:text="Address 2:  "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/citytext"
                android:text="City:  "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/city"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countrytext"
                android:text="Country:  "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/country"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contactnumbertext"
                android:text="Contact Number:  "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactnumber"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alternatecontactnumbertext"
                android:text="Alternate Contact Number:  "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alternatecontactnumber"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emergencycontactpersontext"
                android:text="Emergency Contact Person:  "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emergencycontactperson"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emergencycontactnumbertext"
                android:text="Emergency Contact Number:  "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emergencycontactnumber"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                android:text="Save"
                android:onClick="submit"/>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/DriverButton"
            android:onClick="driver"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="20dp"
            android:text="@string/driver" />

        <Button
            android:id="@+id/PassengerButton"
            android:onClick="passenger"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_below="@+id/DriverButton"
            android:text="@string/passenger"
            />


    </LinearLayout>
       <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/driver_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="driverid"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/passenger_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="passengerid"
        android:visibility="invisible"/>

</RelativeLayout>
